                <th>
                    Позиция
                </th>
                <th>
                    Опыт
                </th>
                <th>
                    ЗП
                </th>
                <th>
                    <p>Email</p>
                </th>
                <th></th>
            </tr>

            <tbody>
                @Html.Action("GetCandidates")
            </tbody>
        </table>
    }
</div>

